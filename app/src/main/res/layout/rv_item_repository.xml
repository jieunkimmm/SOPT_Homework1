<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctnRvItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtRvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SoptStagram"
        app:layout_constraintStart_toStartOf="@+id/txtRvItemDescription"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRvItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="IT 창업 동아리 SOPT 안드로이드"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRvItemName" />

    <ImageView
        android:id="@+id/imgRvItemLanguageColor"
        android:layout_width="73dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRvItemDescription"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtRvItemLanguge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imgRvItemLanguageColor"
        app:layout_constraintStart_toEndOf="@+id/imgRvItemLanguageColor"
        app:layout_constraintTop_toTopOf="@+id/imgRvItemLanguageColor"
        app:layout_constraintVertical_bias="0.513" />
</androidx.constraintlayout.widget.ConstraintLayout>